<h2>Editar Tema</h2>

<form action="/Tema/Editar?id=@Model.Id" method="post">
    <div class="form-group">
        <label>Tema</label>
        <input id="Nombre" class="form-control" name="Nombre" value="@Model.Nombre">        
        @Html.ValidationMessage("Nombre")
    </div>
    <div class="form-group">
        <label>Descripción</label>
        <textarea id="Descripcion" class="form-control" name="Descripcion">@Model.Descripcion</textarea>
        <span>@ViewBag.DescripcionValicion</span>
        @Html.ValidationMessage("Descripcion")
    </div>
    <button id="btnGuardar" class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" href="/Tema">Cancelar</a>
</form>